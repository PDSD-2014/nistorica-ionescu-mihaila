<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewGeneralLoc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout 
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
     <TextView
        android:id="@+id/locationname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LocName"
        android:textSize="20sp"
        android:textStyle="bold|italic"
		android:layout_centerHorizontal="true" />
    
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/locationname"
        android:textSize="20sp"
        android:src="@drawable/ic_launcher"
        />
    
     <TextView
        android:id="@+id/createby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LocCreatedBy"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_below="@id/imageView"
        android:paddingTop="10dp" 	/>
     
      <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_toRightOf="@id/createby"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp" 	/>
      
      <TextView
        android:id="@+id/createon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LocationCreateDate"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_below="@id/createby"
        android:paddingTop="10dp" 	/>
     
      <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createby"
        android:layout_toRightOf="@id/createon"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp" 	/>
     
      <TextView
        android:id="@+id/ratingavg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LocRating"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:paddingTop="10dp"
        android:layout_below="@id/createon"/>
      
      <TextView
        android:id="@+id/avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createon"
        android:textSize="20sp"
        android:paddingLeft="10dp" 
        android:paddingTop="10dp"
        android:layout_toRightOf="@id/ratingavg"/>
      
       <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LocationDesc"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:paddingTop="10dp"
        android:layout_below="@id/ratingavg"/>
       
       <TextView
        android:id="@+id/descriptiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:layout_toRightOf="@id/description"
        android:layout_below="@id/ratingavg"/>
       
       <TextView
	    	android:id="@+id/subscription_status"
	    	android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:layout_below="@id/descriptiontext"
	    	android:layout_alignParentRight="true"
	    	android:layout_centerHorizontal="true"
	    	android:paddingLeft="10dp"
        	android:paddingTop="10dp" 
       />
       <Button
	    android:id="@+id/favorite"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:text="@string/AddToMyPlaces"
	    android:layout_below="@id/subscription_status"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:paddingLeft="10dp"
        android:paddingTop="10dp"
	    />
       <Button
	    android:id="@+id/unsubscribe"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:text="@string/RemoveFromMyPlaces"
	    android:layout_below="@id/subscription_status"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:visibility="gone"
	    />

</RelativeLayout>
</ScrollView>
