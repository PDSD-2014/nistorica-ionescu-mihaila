<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddLocationActivity" >
    
    <LinearLayout
       android:background="#33B5E5"
       android:id="@+id/loader"
       android:orientation="horizontal" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:visibility="gone"
        >
		<ProgressBar
		   android:layout_margin="10dp"
		   android:id="@+id/progressBar1"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   />
		<TextView
		    android:layout_margin="10dp"
		    android:textSize="16sp"
		    android:text="Loading data ..."
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:textColor="#fff"
		    />
	</LinearLayout>
    <EditText
        android:id="@+id/add_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_loc_name" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/select_on_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_current_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        android:onClick="openMapClick"
        android:text="@string/open_map" />

    <Button
        android:id="@+id/get_current_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/select_on_map"
        android:layout_alignLeft="@+id/add_location_longitude"
        android:text="@string/get_current" />

    <EditText
        android:id="@+id/add_location_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_location_name"
        android:layout_alignRight="@+id/add_location_name"
        android:layout_below="@+id/add_location_name"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/add_description"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/add_location_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_location_description"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="@string/add_longitude" />

    <EditText
        android:id="@+id/add_location_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_location_longitude"
        android:layout_alignLeft="@+id/add_location_longitude"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="@string/add_latitude" />

    <EditText
        android:id="@+id/add_photo_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_location_longitude"
        android:layout_below="@+id/add_location_longitude"
        android:ems="10"
        android:hint="@string/add_photo" />

    <Button
        android:id="@+id/add_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/select_on_map"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="addLocationClick"
        android:text="@string/add_location" />

</RelativeLayout>
